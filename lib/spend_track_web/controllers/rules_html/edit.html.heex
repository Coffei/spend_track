<div class="max-w-2xl mx-auto py-6">
  <h1 class="text-2xl font-semibold mb-4">Edit rule</h1>

  <.rule_form
    id="edit-rule-form"
    form={@form}
    categories={@categories}
    action={~p"/rules/#{@rule.id}"}
    method="patch"
    submit_label="Save changes"
  >
    <:cancel>
      <.link
        navigate={~p"/rules"}
        class="ml-2 text-sm font-medium text-zinc-600 hover:text-zinc-900"
      >
        Cancel
      </.link>
    </:cancel>
  </.rule_form>
</div>

